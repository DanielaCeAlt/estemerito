# =============================================
# CONFIGURACIÓN DE ENTORNO - GOSTCAM
# =============================================

# Base de datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=GostCAM

# JWT Secret (cambiar en producción)
JWT_SECRET=your_jwt_secret_key

# Configuración Next.js
NEXT_PUBLIC_API_URL=https://your-api-url.azurewebsites.net

# Configuración API Python FastAPI (Backend unificado)
PYTHON_API_URL=https://your-api-url.azurewebsites.net
NEXT_PUBLIC_PYTHON_API_URL=https://your-api-url.azurewebsites.net

# Credenciales API Azure
API_USERNAME=your_api_username
API_PASSWORD=your_api_password

# Modo de API: 'nextjs' | 'python' | 'hybrid'
NEXT_PUBLIC_API_MODE=hybrid
NEXT_PUBLIC_USE_PYTHON_API=true

# Entorno
NODE_ENV=development